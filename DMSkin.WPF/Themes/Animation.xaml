<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    <!--慢慢隐藏-->
    <Storyboard x:Key="SlowHide" >
        <DoubleAnimation From="1" To="0" Duration="0:0:0.4" Storyboard.TargetProperty="Opacity"/>
        <ThicknessAnimation From="0,0,0,0" To="1000,1000,0,0" Duration="0:0:0.4"  Storyboard.TargetProperty="Margin"/>
    </Storyboard>
    <!--慢慢显示-->
    <Storyboard x:Key="SlowShow" >
        <DoubleAnimation From="0" To="1" Duration="0:0:0.5" Storyboard.TargetProperty="Opacity"/>
        <ThicknessAnimation To="0,0,0,0" From="1000,1000,0,0" Duration="0:0:0.3"   Storyboard.TargetProperty="Margin"/>
    </Storyboard>

    <Window x:Key="xxxx" Margin="50,5,0,50" Width="300" Height="121" VerticalAlignment="Top" Left="500" >
        
    </Window>
    
    <Storyboard x:Key="Show" >
        <ObjectAnimationUsingKeyFrames  Storyboard.TargetProperty="Visibility" Duration="0:0:0.1">
            <ObjectAnimationUsingKeyFrames.KeyFrames>
                <DiscreteObjectKeyFrame KeyTime="1%" >
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames.KeyFrames>
        </ObjectAnimationUsingKeyFrames>
    </Storyboard>
</ResourceDictionary>